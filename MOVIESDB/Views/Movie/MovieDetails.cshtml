@model IEnumerable<MOVIESDB.Models.Movie>

@{
    ViewBag.Title = "MovieDetails";
}

<h2>MovieDetails</h2>

<p>
    @Html.ActionLink("Add New", "MovieAdd")
</p>
<table>
    <tr>
       
        <th>
            Name
        </th>
        <th>
            Plot
        </th>
        <th>
            YoR
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Plot)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YoR)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "MovieUpdate", new { id=item.MovieID  }) |
           
        </td>
    </tr>
}

</table>
